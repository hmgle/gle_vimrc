{
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.formatItems": ["abbr", "kind", "menu", "shortcut"],
  "suggest.labelMaxLength": 60,
  "suggest.menuMaxWidth": 30,
  "suggest.detailField": "preview",
  "suggest.detailMaxLength": 50,
  "coc.source.around.shortcut": "ARD",
  "coc.source.buffer.shortcut": "BUF",
  "coc.source.file.shortcut": "PATH",
  "suggest.completionItemKindLabels": {
    "text": "txt",
    "method": "meth",
    "function": "func",
    "constructor": "ctor",
    "field": "field",
    "variable": "var",
    "class": "class",
    "interface": "iface",
    "module": "mod",
    "property": "prop",
    "unit": "unit",
    "value": "val",
    "enum": "enum",
    "keyword": "key",
    "snippet": "snip",
    "color": "color",
    "file": "file",
    "reference": "ref",
    "folder": "dir",
    "enumMember": "enumM",
    "constant": "const",
    "struct": "struct",
    "event": "event",
    "operator": "oper",
    "typeParameter": "tparam"
  },
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.signPriority": 100,
  "inlayHint.enable": false,
  "signature.enable": true,
  "signature.target": "float",
  "hover.target": "float",
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "rust",
    "json",
    "javascript",
    "typescript"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "rootPatterns": [".git/"]
    }
  },
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "rust-analyzer.inlayHints.enable": false
}
